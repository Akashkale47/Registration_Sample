<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:background="@color/White"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#03A9F4"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivFirst"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/circle"
                    android:padding="10dp"
                    android:src="@drawable/img_register"
                    android:tint="#fff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="serif-monospace"
                    android:text="REGISTER"
                    android:textColor="#fff"
                    android:textSize="22sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <ImageView
                android:id="@+id/ivSecond"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/LinearLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-10sp"
                android:rotation="45"
                android:src="@drawable/square" />



            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:layout_below="@id/ivSecond">

                <ImageView
                    android:id="@+id/ivUserIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/colorPrimary"
                    android:padding="8dp"
                    android:src="@drawable/ic_people_outline_black_24dp"
                    android:tint="@color/White" />

                <EditText
                    android:id="@+id/etAddharNo"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/ivUserIcon"
                    android:layout_alignParentTop="true"
                    android:background="@color/editTextBG"
                    android:layout_toRightOf="@id/ivUserIcon"
                    android:layout_toEndOf="@id/ivUserIcon"
                    android:paddingLeft="20dp"
                    android:textSize="15sp"
                    android:hint="Addhar No."
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:layout_below="@id/relativeLayout1">

                <ImageView
                    android:id="@+id/ivUserIcon1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/colorPrimary"
                    android:padding="8dp"
                    android:src="@drawable/img_user"
                    android:tint="@color/White" />

                <EditText
                    android:id="@+id/etFullName"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/ivUserIcon1"
                    android:layout_alignParentTop="true"
                    android:background="@color/editTextBG"
                    android:layout_toRightOf="@id/ivUserIcon1"
                    android:layout_toEndOf="@id/ivUserIcon1"
                    android:paddingLeft="20dp"
                    android:textSize="15sp"
                    android:hint="Full Name"
                    />
            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:layout_below="@id/relativeLayout2">

                <ImageView
                    android:id="@+id/ivAuthentication"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/colorPrimary"
                    android:padding="8dp"
                    android:src="@drawable/ic_call_blue_24dp"
                    android:tint="@color/White" />

                <EditText
                    android:id="@+id/etCallNumber"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/ivAuthentication"
                    android:layout_alignParentTop="true"
                    android:background="@color/editTextBG"
                    android:layout_toRightOf="@id/ivAuthentication"
                    android:layout_toEndOf="@id/ivAuthentication"
                    android:paddingLeft="20dp"
                    android:textSize="15sp"
                    android:hint="Number"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:layout_below="@id/relativeLayout3">

                <ImageView
                    android:id="@+id/ivEmail"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/colorPrimary"
                    android:padding="8dp"
                    android:src="@drawable/img_email"
                    android:tint="@color/White" />

                <EditText
                    android:id="@+id/etEmail"
                    android:inputType="textEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/ivEmail"
                    android:layout_alignParentTop="true"
                    android:background="@color/editTextBG"
                    android:layout_toRightOf="@id/ivEmail"
                    android:layout_toEndOf="@id/ivEmail"
                    android:paddingLeft="20dp"
                    android:textSize="15sp"
                    android:hint="Email"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:layout_below="@id/relativeLayout4">

                <ImageView
                    android:id="@+id/ivBodyWeight"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/colorPrimary"
                    android:padding="8dp"
                    android:src="@drawable/ic_accessibility_black_24dp"
                    android:tint="@color/White" />

                <EditText
                    android:id="@+id/etWeight"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/ivBodyWeight"
                    android:layout_alignParentTop="true"
                    android:background="@color/editTextBG"
                    android:layout_toRightOf="@id/ivBodyWeight"
                    android:layout_toEndOf="@id/ivBodyWeight"
                    android:paddingLeft="20dp"
                    android:textSize="15sp"
                    android:hint="Weight /kg"
                    />
                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/tv_view"
                    android:layout_below="@id/etWeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Gender"
                    android:textColor="@color/black"
                    />
                <RadioGroup
                    android:id="@+id/radio_group_button"
                    android:layout_below="@id/tv_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <RadioButton
                        android:id="@+id/rb_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        />
                    <RadioButton
                        android:id="@+id/rb_female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Female"
                        />

                </RadioGroup>
            </RelativeLayout>


            <Button
                android:id="@+id/btNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relativeLayout5"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textColor="@color/White"
                android:text="Next"
                android:background="@color/colorPrimary"
                />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>